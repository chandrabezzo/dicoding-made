<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.bezzo.moviecatalogue">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
            android:name=".MVVMApp"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <receiver android:name=".widget.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/favorite_widget_info" />
        </receiver>

        <activity android:name=".features.favorite.DetailFavoriteActivity" />
        <activity android:name=".features.detailTv.DetailTvActivity" />
        <activity
                android:name=".features.setting.SettingActivity"
                android:configChanges="locale" />
        <activity
                android:name=".features.detailMovie.DetailMovieActivity"
                android:configChanges="locale" />
        <activity
                android:name=".features.main.MainActivity"
                android:configChanges="locale" />
        <activity android:name=".features.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
                android:name=".util.DailyAlarmReceiver"
                android:enabled="true"
                android:exported="true" />
        <receiver
                android:name=".util.ReleaseAlarmReceiver"
                android:enabled="true"
                android:exported="true" />

        <service
                android:name=".widget.FavoriteStackWidgetService"
                android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <provider
                android:authorities="com.bezzo.moviecatalogue.provider"
                android:name=".util.FavoriteMovieProvider"
                android:exported="true"/>
    </application>

</manifest>